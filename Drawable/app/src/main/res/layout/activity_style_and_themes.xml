<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StyleAndThemesActivity">


    <TextView style ="@style/EstiloTitulo"
        android:id="@+id/textStyleAndThemes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Bienvenido a mi aplicaciÃ³n"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button style ="@style/EstiloBoton"
        android:id="@+id/buttonStyleAndThemes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
