<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificacionesActivity">

    <EditText
        android:id="@+id/textEdit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonToast"/>

    <Button
        android:id="@+id/buttonToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textEdit"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Lanzar Toast"/>

    <EditText
        android:id="@+id/snackBarText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/textEdit"
        app:layout_constraintEnd_toStartOf="@id/buttonToast"/>

    <Button
        android:id="@+id/buttonSnackBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/snackBarText"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="AÃ±adir tarea"/>

    <TextView
        android:id="@+id/taskList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F0F0D0"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/snackBarText"
        app:layout_constraintStart_toStartOf="@id/snackBarText"
        app:layout_constraintEnd_toEndOf="@id/snackBarText" />

    <Button
        android:id="@+id/button_ej3"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@drawable/state_list_button"
        app:layout_constraintTop_toBottomOf="@id/taskList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:text="Ejercicio 3"
        android:textColor="@color/black"
        app:backgroundTint="@null" />



</androidx.constraintlayout.widget.ConstraintLayout>