<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src ="@drawable/spiderposter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/TakePhoto"
            android:layout_weight="1"/>
        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/SelectImage"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="@string/FilmTitle"
                android:layout_weight="2"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="@string/Director"
                android:layout_weight="2"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="@string/Year"
                android:layout_weight="2"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="@string/LinktoIMDB"
                android:layout_weight="2"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:prompt="@string/Genre"
                android:entries="@array/Genres"
                android:layout_weight="1"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:prompt="@string/Format"
                android:entries="@array/Formats"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="@string/Annotations"
                android:layout_weight="2"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom ="15dp"         >
        <Button
            android:id="@+id/cancelButton"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Cancel"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="@string/Save" />
    </LinearLayout>
</LinearLayout>
