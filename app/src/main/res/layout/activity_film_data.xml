<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmDataActivity" >

    <ImageView
        android:id="@+id/imgFilm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="25dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:src="@drawable/spiderposter"/>

    <TextView
        android:id="@+id/FilmData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="96dp"
        android:text="@string/FilmData"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/relatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/RelatedFilm"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/editButton"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/FilmData" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EditFilm"
        android:layout_above="@id/backPrincipalButton"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/backPrincipalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="15dp"
        android:text="@string/BacktoPrincipal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>